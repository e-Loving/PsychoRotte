<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.AsosiyFragment">

    <TextView
        android:id="@+id/tv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/quicksand"
        android:text="Islom"
        android:textColor="#F4607A"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Barchasi siz uchun !"
        android:textColor="#939393"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_play"
        app:layout_constraintTop_toBottomOf="@id/tv_play" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_beginner"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#ED788D"
        app:cardCornerRadius="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_slogan">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_start_beginner"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_of_btn"
                android:backgroundTint="#FFEB3B"
                android:src="@drawable/ic_baseline_play_arrow_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/highScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/quicksand"
                android:text="Yuqori - 0"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_beginner"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_beginner" />

            <TextView
                android:id="@+id/tv_level_beginner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand"
                android:text="1-Daraja"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/tv_beginner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@id/btn_start_beginner"
                app:layout_constraintTop_toBottomOf="@id/btn_start_beginner" />

            <TextView
                android:id="@+id/tv_beginner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand"
                android:text="Boshlang'ich"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@id/btn_start_beginner"
                app:layout_constraintTop_toBottomOf="@id/tv_level_beginner" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="100dp"
        android:elevation="10dp"
        android:src="@drawable/travel"
        app:layout_constraintEnd_toEndOf="@id/cv_medium"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_medium"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="15dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#2962FF"
        app:cardCornerRadius="50dp"
        app:layout_constraintTop_toBottomOf="@id/cv_beginner">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_start_medium"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_of_btn"
                android:backgroundTint="#00B8D4"
                android:src="@drawable/ic_baseline_play_arrow_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_level_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand"
                android:text="2-Daraja"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/tv_medium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@id/btn_start_medium"
                app:layout_constraintTop_toBottomOf="@id/btn_start_medium" />

            <TextView
                android:id="@+id/tv_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand"
                android:text="O'rganuvchi"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@id/btn_start_medium"
                app:layout_constraintTop_toBottomOf="@id/tv_level_medium" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:layout_marginTop="315dp"
        android:elevation="10dp"
        android:src="@drawable/air_ballon_with_clouds"
        app:layout_constraintEnd_toEndOf="@id/cv_medium"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_difficult"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="15dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#FFAB00"
        app:cardCornerRadius="50dp"
        app:layout_constraintTop_toBottomOf="@id/cv_medium">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_start_difficult"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_of_btn"
                android:backgroundTint="#F4511E"
                android:src="@drawable/ic_baseline_play_arrow_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_level_difficult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand"
                android:text="3-Daraja"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/tv_difficult"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@id/btn_start_difficult"
                app:layout_constraintTop_toBottomOf="@id/btn_start_difficult" />

            <TextView
                android:id="@+id/tv_difficult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand"
                android:text="Tajribali"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@id/btn_start_difficult"
                app:layout_constraintTop_toBottomOf="@id/tv_level_difficult" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:layout_marginTop="545dp"
        android:elevation="10dp"
        android:src="@drawable/photo"
        app:layout_constraintEnd_toEndOf="@id/cv_difficult"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>