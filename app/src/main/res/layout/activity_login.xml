<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#FFB300">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ballons" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_editname"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        app:cardBackgroundColor="#039BE5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="50dp">
        <EditText
            android:id="@+id/et_name"
            android:fontFamily="@font/quicksand"
            android:hint="Ism (majburiy)"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_editpassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        app:cardBackgroundColor="#039BE5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="50dp">
    <EditText
        android:inputType="number"
        android:id="@+id/et_password"
        android:fontFamily="@font/quicksand"
        android:hint="Parol (ixtiyoriy)"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go"
        android:layout_width="wrap_content"
        android:letterSpacing="0.1"
        android:layout_height="50dp"
        android:fontFamily="@font/quicksand"
        android:backgroundTint="#039BE5"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_editpassword"
        android:layout_marginTop="30dp"
        app:cornerRadius="50dp"
        android:text="Boshlash"/>

</androidx.constraintlayout.widget.ConstraintLayout>