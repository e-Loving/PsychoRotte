<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <TextView
        android:id="@+id/tv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LET'S PLAY"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#F4607A"
        android:textSize="35sp"
        android:fontFamily="@font/quicksand"/>
    <TextView
        android:id="@+id/tv_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Be the first !"
        app:layout_constraintTop_toBottomOf="@id/tv_play"
        app:layout_constraintLeft_toLeftOf="@id/tv_play"
        android:textSize="20sp"
        android:textColor="#939393"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_play"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="15dp"
            android:elevation="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_slogan"
            app:cardBackgroundColor="#ED788D"
            app:cardCornerRadius="50dp">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_of_btn"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="#0091EA"

                android:src="@drawable/ic_baseline_play_arrow_24"/>

        </androidx.cardview.widget.CardView>
        <ImageView
            app:layout_constraintEnd_toEndOf="@id/cv_play"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="230dp"
            android:elevation="10dp"
            android:src="@drawable/travel" />




</androidx.constraintlayout.widget.ConstraintLayout>