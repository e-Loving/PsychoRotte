<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB300"
    tools:context=".activities.QuizActivity">



    <TextView
        android:id="@+id/tv_question_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textSize="20dp"
        android:textColor="#039BE5"
        android:fontFamily="@font/quicksand"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_chance"
        app:layout_constraintStart_toStartOf="@+id/iv_chance"
        app:layout_constraintTop_toBottomOf="@+id/iv_chance" />

    <TextView
        android:id="@+id/tv_savol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:text="Savol"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/variant1"
        app:layout_constraintTop_toBottomOf="@+id/iv_chance" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/variant4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:backgroundTint="#039BE5"
        android:fontFamily="@font/quicksand"
        android:minHeight="70dp"
        android:text="Variant 4"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="30dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/variant3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#039BE5"
        android:fontFamily="@font/quicksand"
        android:minHeight="70dp"
        android:text="Variant 3"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@id/variant4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/variant2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#039BE5"
        android:fontFamily="@font/quicksand"
        android:minHeight="70dp"
        android:text="Variant 2"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@id/variant3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/variant1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#039BE5"
        android:fontFamily="@font/quicksand"
        android:minHeight="70dp"
        android:text="Variant 1"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@id/variant2" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_daraja"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@+id/tv_daraja" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:max="10"
        android:progress="5"
        app:layout_constraintEnd_toEndOf="@+id/tv_daraja"
        app:layout_constraintStart_toStartOf="@+id/tv_daraja"
        app:layout_constraintTop_toBottomOf="@id/tv_daraja"/>

    <ImageView
        android:id="@+id/iv_chance"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/smile"
        app:layout_constraintEnd_toEndOf="@+id/tv_daraja"
        app:layout_constraintStart_toStartOf="@+id/tv_daraja"
        app:layout_constraintTop_toBottomOf="@+id/progress" />

    <TextView
        android:id="@+id/tv_daraja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:text="Boshlang'ich"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>