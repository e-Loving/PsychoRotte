<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetPasswordActivity"
    android:background="#FFB300">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/ballons"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="15dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_arrow_back_24"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_editpassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        app:cardBackgroundColor="#039BE5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="50dp">
        <EditText
            android:id="@+id/et_password"
            android:fontFamily="@font/quicksand"
            android:hint="Yangi parol kiriting !"
            android:inputType="number"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#039BE5"
        android:fontFamily="@font/quicksand"
        android:letterSpacing="0.1"
        android:text="Kiritish"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="@id/cv_editpassword"
        app:layout_constraintTop_toBottomOf="@id/cv_editpassword" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_delete"
        android:layout_marginTop="40dp"
        android:text="Yo'q qilish"
        android:textAllCaps="false"
        android:backgroundTint="#039BE5"
        android:letterSpacing="0.1"
        android:fontFamily="@font/quicksand"
        android:textSize="15sp"
        app:cornerRadius="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/cv_editpassword"
        app:layout_constraintTop_toBottomOf="@+id/cv_editpassword" />

</androidx.constraintlayout.widget.ConstraintLayout>